<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:stretchColumns="1" >
    
     <!-- 顶部 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:src="@drawable/logo"
            android:scaleType="centerInside"
             />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical" >
        
        <!-- 账号 -->

        <EditText
            android:id="@+id/et_user_re"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_text"
            android:layout_marginRight="@dimen/padding_text"
            android:hint="输入手机号/账号"
            android:inputType="none"
            android:singleLine="true" />
        
        <!-- 邮箱 -->


        <!-- 密码 -->

        <EditText
            android:id="@+id/et_password_re"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_text"
            android:layout_marginRight="@dimen/padding_text"
            android:layout_marginTop="@dimen/padding_text"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:singleLine="true" />

        <EditText
            android:id="@+id/et_addrs_rs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_text"
            android:layout_marginRight="@dimen/padding_text"
            android:layout_marginTop="@dimen/padding_text"
            android:hint="请输入所属雷达站"
            android:singleLine="true" />
        

        <!-- 按钮 -->

        <Button
            android:id="@+id/bt_login_re"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/padding_btn"
            android:layout_marginRight="@dimen/padding_btn"
            android:layout_marginTop="@dimen/padding_btn"
            android:background="@drawable/btn_shape"
            android:onClick="onClick"
            android:text="注册"
            android:textSize="24sp"
            android:textColor="@android:color/white" />
  </LinearLayout>
</TableLayout>
